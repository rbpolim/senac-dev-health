generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id     String @id @default(cuid())
  email  String @unique
  userId String @unique

  IMC IMC?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model IMC {
  id                  String   @id @default(cuid())
  name                String
  dateOfBirth         DateTime
  gender              Gender
  heightInCentimeters Int
  weightInGrams       Int
  imc                 Float

  profileId String  @unique
  profile   Profile @relation(fields: [profileId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Recipe {
  id               String     @id @default(cuid())
  name             String
  ingredients      String[]
  steps            String[]
  preparationTime  Int
  cookingTime      Int
  nutritionalValue BigInt // in Kcal
  type             TypeRecipe

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Gender {
  MALE
  FEMALE
}

enum TypeRecipe {
  SALADAS
  LEGUMES
  CARNES
  MASSAS
  SOPAS
  SOBREMESAS
  BEBIDAS
}
